    'read.bibtex.R'
    'write.bibtex.R'
    'init_knitbib.R'
    'print_rdfa.R'
    'write_cache.R'
    'newbib.R'
    'zzz.R'
    'inline_formats.R'
    'greycite.R'
    'url_regexpr.R'
    'cite_options.R'
